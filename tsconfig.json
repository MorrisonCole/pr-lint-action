{
  "compilerOptions": {
    "target": "es2024",
    "module": "nodenext",
    
    "outDir": "./out",
    "noEmit": true,

    "incremental": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowJs": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
